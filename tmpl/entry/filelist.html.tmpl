<table class="dirlist">
  <tr>
    <th></th>
    <th>ID</th>
    <th></th>
    <th class="description">コメント</th>
    <th colspan="3">アップロード日時</th>
  </tr>


[% FOREACH item IN files %]
  [% count = loop.count() %]
  <tr 
    class="
      doc_[% item.fileid %]
      [% count % 2 == 1 ? "row_odd" : "row_even" %]
     ">
    <td class="filelist">
      <a href="fileget.cgi?fid=[% item.fileid %]">[% PROCESS show_table_icon id = 'download' %]</a>
      <a href="fileinfo.cgi?fid=[% item.fileid %]">[% PROCESS show_table_icon id = 'info' %]</a>
      </td>
    <td class="path">
      [%- PROCESS show_mime_icon id = item.fileext -%]
      [% item.fileid FILTER html %]</td>
    <td>[% item.fileext %]</td>
    <td class="filedesc">[% item.description FILTER html %]</td>
    <td>[% item.uname %]</td>
    <td>[% item.uptime %]</td>
    <td class="docsize">[% SizeDisp(item.size) %]</td>
  </tr>
[% END %]

</table>
