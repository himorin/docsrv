[% PROCESS global/header.html.tmpl
  current_page = "pathinfo"
  page_title = "$terms.path 表示 - $full_path"
%]

<h3>現在の [% terms.path %] ([% full_path %]) の情報</h3>

[% IF pid == 0 %]
  <p>トップ [% terms.path %]</p>
[% ELSE %]
  <ul>
    <li>ID: [% path_info.pathid %]</li>
    <li>フルパス: [% full_path %]</li>
    <li>一つ上: <a href="pathinfo.cgi?pid=[% path_info.parent %]">[% path_info.parent %]</a></li>
    <li>名前: [% path_info.pathname %]</li>
    <li>説明: [% path_info.description %]</li>
    <li>アクセス可能グループ: [% path_info.gname.join(', ') %]</li>
  </ul>
[% END %]

[% IF pid == 0 %]
  [% PROCESS entry/table.html.tmpl       upper_path = -1
                                         paths = spath_list  docs = doc_list %]
[% ELSE %]
  [% PROCESS entry/table.html.tmpl       upper_path = path_info.parent
                                         paths = spath_list  docs = doc_list %]
[% END %]

[% PROCESS entry/diradd.html.tmpl      cur_pid = path_info.pathid %]

[% PROCESS global/footer.html.tmpl %]
