[%# 表の中のアイコンの表示定義
  #   id : アイコンID
  #%]
[%- BLOCK show_table_icon %]<img 
  [%- IF IcoTable.$id.defined -%]
    src="skins/images/[% IcoTable.$id.value %]" title="[% IcoTable.$id.tiphelp %]"
  [%- ELSE -%]
    src="skins/images/[% terms.icon_def %]" title="アイコンが未定義です"
  [%- END %]
  [% IF html_id.defined %]id="[% html_id FILTER html %]"[% END -%]
  [% IF html_class.defined %]class="[% html_class FILTER html %]"[% END -%]
/>[% END -%]

[% BLOCK show_mime_icon %]<img 
  [%- IF IcoMime.$id.defined -%]
    src="skins/images/[% IcoMime.$id.value %]" title="[% IcoMime.$id.tiphelp %]"
  [%- ELSE -%]
    src="skins/images/[% terms.icon_def %]" title="アイコンが未定義です"
  [%- END %]
/>[% END %]
