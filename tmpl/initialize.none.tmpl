[%# 表の中のアイコンの表示定義
  #   id : アイコンID
  #%]
[%- BLOCK show_table_icon -%]
  [%- IF IcoTable.$id.defined -%]
    <img src="skins/images/[% IcoTable.$id.value %]" title="[% IcoTable.$id.tiphelp %]" />
  [%- ELSE -%]
    <img src="skins/images/[% terms.icon_def %]" title="アイコンが未定義です" />
  [%- END -%]
[%- END -%]

